<odoo>
    <record id="real_estate_property_tree" model="ir.ui.view">
        <field name="name">real.estate.property.tree</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" 
            decoration-success="state == 'offer received'" 
            decoration-bf="state == 'offer received'" 
            decoration-muted="state == 'sold'"
            decoration-primary="state == 'offer accepted'" >
                <field name="name" string="Title" />
                <field name="tag_ids" string="Tags"/>
                <field name="property_type_id" string="Type"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="real_estate_property_form" model="ir.ui.view">
        <field name="name">real.estate.property.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="cancel_property" type="object" string="Cancel" invisible="state == 'sold'" />
                    <button name="sold_property" type="object" string="Sold" invisible="state == 'sold'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="state == 'sold'" />
                    </h1>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"  editable="bottom" readonly="state == 'sold'"/>
                            <field name="property_type_id" options="{'no_create': True, 'no_open': True}" readonly="state == 'sold'"/>
                            <field name="postcode" readonly="state == 'sold'"/>
                            <field name="date_availability" readonly="state == 'sold'"/>
                        </group>
                        <group>
                            <field name="expected_price" readonly="state == 'sold'"/>
                            <field name="best_price" readonly="state == 'sold'"/>
                            <field name="selling_price" readonly="state == 'sold'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" readonly="state == 'sold'"/>
                                <field name="bedrooms" readonly="state == 'sold'"/>
                                <field name="living_area" readonly="state == 'sold'"/>
                                <field name="facades" readonly="state == 'sold'"/>
                                <field name="garage" readonly="state == 'sold'"/>
                                <field name="garden" readonly="state == 'sold'"/>
                                <field name="garden_area" invisible="not garden" readonly="state == 'sold'"/>
                                <field name="garden_orientation" invisible="not garden" readonly="state == 'sold'"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" readonly="state in ['sold', 'offer accepted' ,'cancelled']" >
                                    <list 
                                    decoration-success="status == 'accepted'" 
                                    decoration-danger="status == 'refused'" 
                                    editable="bottom">
                                        <field name="price" string="Price"/>
                                        <field name="property_type_id" string="tyt"/>
                                        <field name="partner_id" string="Partner"/>
                                        <field name="validity" string="Validity (days)"/>
                                        <field name="date_deadline" string="Deadline"/>
                                        <button name="action_confirm"  states="draft" type="object" icon="fa-check" invisible="status"/>
                                        <button name="action_refuse"  states="draft" type="object" icon="fa-times" invisible="status"/>
                                        <field name="status" string="Status"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="seller" readonly="state == 'sold'"/>
                                <field name="buyer" readonly="state == 'sold'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_real_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>